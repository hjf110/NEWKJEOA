.inputTime {
  color: #3B3B4D;
  font-size: 31rpx;
  font-family: "微软雅黑";
}

.form-rows {
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  height: 380rpx;
  align-items: center;
  position: relative;
}

.textarea-content {
  flex: 1;
  font-size: 34rpx;
  margin-left: 1em;
  width: 330rpx;
  height: 260rpx;
}

.my-textarea {
  font-family: "微软雅黑";
  font-size: 34rpx;
  width: 96%;
  margin-left: 1.5%;
}

.my-button {
  width: 100%;
  height: 110rpx;
  position: relative;
  bottom: 1px;
  z-index: 5;
  background-color: white;
}

.page-section-btns>view {
  -webkit-box-flex: 1, ;
  flex: 1 1 0%;
  height: 1rem;
  display: flex;
  -webkit-box-align: center;
  align-items: center;
  justify-content: space-around;
  color: rgb(73, 169, 238);
}

.buttons {
  width: 170rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  margin-top: 5rpx;
  margin-bottom: 0rpx;
}

